<a class="pizza" href="/productos/<%= pizza.id %>">
  <img src=/imgs/productos/<%=pizza.imagen%> />
  <div class="info">

    <div class="info-pizza">
      <p class="nombre-producto">
        <%=pizza.nombre%>
      </p>
      <span class="precio">$<%=pizza.precio%></span>
      <p class="descripcion-promo">
        <%=pizza.descripcion%>
      </p>
    </div>
    <button class="btn agregar-carrito">Agregar al Pedido</button>
  </div>
</a>
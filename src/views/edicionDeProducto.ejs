<!DOCTYPE html>
<html lang="es">

<%- include ('./partials/head.ejs')%>
    <link rel="stylesheet" href="/css/productEdit.css" />

    <title>Edicion de producto</title>
    </head>

    <body>
        <%- include('./partials/header.ejs') %>
            <main class="edicionProducto">
                <div class="container-product-edit">
                    <div class="titulo-edicion-producto">
                        <p class="titulo">Editando producto<br>
                            <%= producto.nombre %>
                        </p>
                    </div>
                    <form action="/" method="POST">
                        <div class="nombre-producto-edit">
                            <label for="nombre-producto-edit">Nombre del Producto</label>
                            <input type="text" name="nombre-producto-edit" ; value="<%= producto.nombre %>" ;
                                id="nombre-producto-edit">
                            </input>
                        </div>
                        <div class="descripcion-producto">
                            <label for="descripcion-producto">Descripción</label>
                            <input type="textarea" name="descripcion-producto" ; value="<%= producto.descripcion %>" ;
                                id="descripcion-producto">
                            </input>
                        </div>
                        <div class="imagen-producto">
                            <label for="imagen-producto">Imagen</label>
                            <div class="file-select">
                                <input type="file" ; name="imagen-producto" ; id="imagen-producto" ; accept=".jpg">
                                </input>
                            </div>
                        </div>
                        <div class="categoria-producto">
                            <label for="categoria-producto">Categoría</label>
                            <select name="categoria-producto">
                                <option value="pizza">Pizza</option>
                                <option value="empanada">Empanada</option>
                                <option value="promocion">Promoción</option>
                            </select>
                        </div>
                        <div class="precio-producto">
                            <label for="precio-producto">Precio</label>
                            <input type="number" ; name="precio-producto" value="<%= producto.precio %>"
                                id="precio-producto"></input>
                        </div>
                        <div class="botones-edicion">
                            <button class="save-changes" type="submit" id="botones-edicion">Guardar Cambios</button>
                            <button class="clear-all" type="reset" id="botones-ediccion">Borrar Cambios</button>
                        </div>
                    </form>
                </div>
            </main>
            <%- include('./partials/footer.ejs') %>
                <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
                <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    </body>

</html>